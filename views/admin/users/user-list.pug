extends ../base

block content
  .row.mt-3
    .col
      .card
        .card-header
          .row
            .col
              h4.mb-0 Users
            .col.text-right
              a.btn.btn-primary(href="/admin/create-user")
                i.fa.fa-plus
        .card-body.m-0.p-0
          table.table.table-hover.table-striped.m-0.p-0
            thead
              tr
                th Name
                th Email
                th

            tbody
              each user, i in users.data
                tr
                  td #{user.first_name} #{user.last_name}
                  td #{user.email}
                  td.text-right
                    .btn-group(role='group', aria-label='User Options')
                      a.btn.btn-secondary(href='/admin/edit-user/' + user._id)
                        i.fa.fa-pencil
                      a.btn.btn-secondary(href='/admin/change-password/' + user._id)
                        i.fa.fa-key
